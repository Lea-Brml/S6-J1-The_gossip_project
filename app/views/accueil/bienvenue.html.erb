    <div class="card-body">
      <a class="card-title" href="http://localhost:3000/gossip/<%=t.id%>"> <%=t.title %> </a>
      <p class="card-text"> <% a = t.user_id %> Gossipeur : <%= @user.find(a).first_name %></p>
